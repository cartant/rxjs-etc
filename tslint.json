{
  "defaultSeverity": "error",
  "extends": [
    "@cartant/tslint-config",
    "@cartant/tslint-config-etc",
    "@cartant/tslint-config-rxjs"
  ],
  "rules": {
    "deprecation": { "severity": "off" },
    "rxjs-no-connectable": { "severity": "off" },
    "rxjs-no-create": { "severity": "off" },
    "rxjs-no-subclass": { "severity": "off" },
    "rxjs-no-unsafe-scope": { "severity": "off" },
    "trailing-comma": { "severity": "off" },
    "typedef": {
      "options": [
        "parameter",
        "property-declaration"
      ],
      "severity": "error"
    }
  }
}
